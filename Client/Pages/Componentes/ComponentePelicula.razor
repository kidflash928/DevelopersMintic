<div class="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a>
        <img src="@Pelicula.Imagen" alr="" wigth="225px" height="300px"/>
    </a>
    <p style="max-width:225px; height: 44px; font-size: 15px; font-wight: bold;">
        <a href="@urlPelicula">@Pelicula.Nombre</a>
    </p>
    <div>
        <a class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@(()=>EliminarPelicula.InvokeAsync(Pelicula))">Eliminar</button>
    </div>
</div>
@code
{
    [Parameter] public Pelicula Pelicula {get;set;}
    [Parameter] public EventCallback<Pelicula> EliminarPelicula {get;set;}
    private string urlPelicula = string.Empty;
    protected override void OnInitialized()
    {
        urlPelicula =$"pelicula/";
    }
}